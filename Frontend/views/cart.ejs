<%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/cart.css">
    </head>

    <body>
        <%- include('includes/nav') %>
            <main>
                <section class="index">
                    <h2>ตะกร้าสินค้า</h2>
                    <div id="cart">

                        <% if (cart && cart.items.length> 0) { %>
                            <% cart.items.forEach(item=> { %>
                                <div class="rental-card">
                                    <img src="<%= item.product.images[0]?.image_url %>" alt="Product Image"
                                        style="width:150px; border-radius:10px;">
                                    <div class="rental-info">
                                        <a href="/detail_product?id=<%= item.product.product_id %>">
                                            <%= item.product.product_name %>
                                        </a>
                                        <p>จำนวน: <%= item.quantity %>
                                        </p>
                                        <p>ราคาค่าเช่า: <%= item.price?.price ?? 'N/A' %>฿</p>
                                    </div>
                                    <button class="remove-btn" data-id="<%= item.cartItem_id %>">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p>ไม่มีสินค้าในตะกร้า</p>
                                        <% } %>

                    </div>
                </section>
            </main>
            <%- include('includes/footer') %>

                <script>
                    // ✅ ลบสินค้าออกจากตะกร้า
                    document.querySelectorAll('.remove-btn').forEach(btn => {
                        btn.addEventListener('click', async e => {
                            const id = e.currentTarget.dataset.id;
                            const res = await fetch(`/api/cart/${id}`, { method: 'DELETE' });
                            const data = await res.json();
                            alert(data.message);
                            location.reload();
                        });
                    });
                </script>
    </body>

    </html>