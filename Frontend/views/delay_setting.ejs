<%- include('includes/head') %>

    <body class="bg-zinc-50">
        <%- include('includes/navAdmin') %>

            <main class="max-w-lg mx-auto py-10">
                <h1 class="text-2xl font-bold mb-6">ตั้งค่าดีเลย์การจอง</h1>

                <form action="/api/admin/delay_setting" method="POST">
                    <label class="block">
                        ส่งของล่วงหน้า (วัน)
                        <input type="number" name="delay_ship_days" value="<%= delay?.delay_ship_days || 3 %>"
                            class="border rounded p-2 w-full">
                    </label>

                    <label class="block">
                        หลังคืน (วัน)
                        <input type="number" name="delay_return_days" value="<%= delay?.delay_return_days || 3 %>"
                            class="border rounded p-2 w-full">
                    </label>

                    <label class="block">
                        ซัก/ตรวจชุด (วัน)
                        <input type="number" name="delay_clean_days" value="<%= delay?.delay_clean_days || 5 %>"
                            class="border rounded p-2 w-full">
                    </label>

                    <label class="block">
                        เตรียมส่งรอบถัดไป (วัน)
                        <input type="number" name="delay_next_ship_days" value="<%= delay?.delay_next_ship_days || 3 %>"
                            class="border rounded p-2 w-full">
                    </label>

                    <label class="block">
                        รอแอดมินอนุมัติ (วัน)
                        <input type="number" name="delay_admin_days" value="<%= delay?.delay_admin_days || 2 %>"
                            class="border rounded p-2 w-full">
                    </label>

                    <div class="form-group mt-4">
                        <label>รวมระยะเวลาทั้งหมด (วัน)</label>
                        <input type="number" value="<%= delay.plus_delay_days %>" readonly
                            class="border rounded p-2 w-full bg-gray-100 font-semibold text-center text-indigo-700">
                    </div>


                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">
                        บันทึกการตั้งค่า
                    </button>
                </form>
            </main>
            <%- include('includes/footer') %>
    </body>