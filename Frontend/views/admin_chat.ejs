<%- include('includes/head') %>
<link rel="stylesheet" href="/styles/chat.css">

<body>
  <%- include('includes/navAdmin') %>
  
  <main class="chat-admin-container">
    <!-- 📜 รายชื่อห้องแชททั้งหมด -->
    <aside id="chat-list">
      <h3>💬 ห้องแชททั้งหมด</h3>
      <div id="chat-rooms"></div>
    </aside>

    <!-- 💬 หน้าต่างแชท -->
    <section id="chat-window">
      <div id="chat-header">
        <h3 id="chat-title">เลือกห้องเพื่อเริ่มสนทนา</h3>
      </div>
      <div id="messages" class="messages-area"></div>

      <form id="chat-form" class="chat-form">
        <input type="text" id="message" placeholder="พิมพ์ข้อความ..." autocomplete="off" />
        <button type="submit">ส่ง</button>
      </form>
    </section>
  </main>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat_admin.js"></script>
</body>
