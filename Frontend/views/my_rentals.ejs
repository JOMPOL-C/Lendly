    <main>
            <section class="index">
                <h2>เช่าของฉัน</h2>
                <div class="tabs">
                    <a href="#" class="active" onclick="openTab(event, 'all_rental', this)">ทั้งหมด</a>
                    <a href="#" onclick="openTab(event, 'wait', this)">รอชำระ</a>
                    <a href="#" onclick="openTab(event, 'renting', this)">กำลังเช่า</a>
                    <a href="#" onclick="openTab(event, 'returning', this)">รอคืน / คืนแล้ว</a>
                    <a href="#" onclick="openTab(event, 'problem', this)">มีปัญหา</a>
                </div>

                <div id="all_rental" class="tab-content" style="display:block">
                    <div class="rental-card">
                        <img src="https://dokidokicos.com/cdn/shop/files/1_63d6aca4-1bf0-491b-af84-9f79b1ee5e44.jpg?v=1717159871" alt="Product Image">
                        <div class="rental-info">
