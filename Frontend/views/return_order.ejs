<%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/rental.css">

    </head>

    <body>
        <%- include('includes/nav') %>
            <main>
                <section class="index ">
                    <h2>แบบฟอร์มคืนสินค้า</h2>

                    <form action="/orders/return" method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>เลขพัสดุขากลับ</label>
                            <input type="text" name="returnTrackingNo" placeholder="กรอกเลขพัสดุ" required>
                        </div>

                        <div class="form-group">
                            <label>อัปโหลดใบเสร็จ</label>
                            <input type="file" name="receipt" accept="image/*" required>
                            <p class="note">รองรับไฟล์ .jpg .png .pdf</p>
                        </div>

                        <input type="hidden" name="orderId" value="RNT-0001">

                        <div class="form-group">
                            <label for="condition">สภาพสินค้า:</label>
                            <select id="condition" name="condition" required>
                                <option value="">-- เลือกสภาพสินค้า --</option>
                                <option value="good">ดี</option>
                                <option value="damaged">เสียหาย</option>
                                <option value="missing_parts">ขาดชิ้นส่วน</option>
                            </select>
                        </div>
                        <button type="submit" class="submit-btn">ส่งข้อมูลคืนสินค้า</button>
                    </form>
                </section>


            </main>
            <%- include('includes/footer') %>
                <script src="/js/script.js"></script>

    </body>

    </html>