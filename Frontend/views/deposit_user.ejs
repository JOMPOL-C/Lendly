<%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/deposit_user.css">
    </head>

    <body>
        <%- include('includes/nav') %>

            <main class="section-p1">

                <% if (rentals.length===0) { %>
                    <p style="text-align:center; color:#6b21a8;">ยังไม่มีรายการคืนมัดจำ</p>
                    <% } else { %>
                        <div class="refund-list">
                            <% rentals.forEach(r=> { %>
                                <div class="refund-card">
                                    <div class="refund-header">
                                        <img src="<%= r.product?.images?.[0]?.image_url || '/images/no-image.png' %>"
                                            alt="">
                                        <div class="refund-info">
                                            <h3>
                                                <%= r.product?.product_name %>
                                            </h3>
                                            <p><strong>รหัสเช่า:</strong>
                                                <%= r.rental_id %>
                                            </p>
                                            <p><strong>วันที่คืน:</strong>
                                                <%= new Date(r.refund_date).toLocaleDateString('th-TH') %>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="refund-body">
                                        <p><strong>จำนวนที่คืน:</strong>
                                            <%= r.refund_amount ?? 0 %> บาท
                                        </p>
                                        <% if (r.refund_note) { %>
                                            <p><strong>หมายเหตุ:</strong>
                                                <%= r.refund_note %>
                                            </p>
                                            <% } %>
                                                <% if (r.refund_slip) { %>
                                                    <div class="refund-slip">
                                                        <p><strong>สลิปการคืนเงิน:</strong></p>
                                                        <img src="<%= r.refund_slip %>" alt="สลิปคืนเงิน">
                                                    </div>
                                                    <% } %>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </main>
            <script src="/js/script.js"></script>
    </body>

    </html>